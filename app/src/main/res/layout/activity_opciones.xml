<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="apps.icesirun.Opciones"
    android:clickable="false"
    android:orientation="vertical"
    android:stretchColumns="0,1"
    android:columnCount="2"
    android:rowCount="3">


    <Button
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/nivel5"
        android:layout_columnSpan="2"
        android:background="@mipmap/nivelcinco" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/nivel4"
        android:layout_row="1"
        android:layout_column="0"
        android:background="@mipmap/nivelcuatro" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/nivel3"
        android:layout_row="1"
        android:layout_column="1"
        android:background="@mipmap/niveltres" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/nivel2"
        android:layout_row="2"
        android:layout_column="0"
        android:background="@mipmap/niveldos" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/nivel1"
        android:layout_row="2"
        android:layout_column="1"
        android:background="@mipmap/niveluno" />
</GridLayout>
