<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="apps.icesirun.Preguntas">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/fondopregunta">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="231dp"
            android:layout_row="7"
            android:layout_column="5"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/vidas"
                android:layout_row="1"
                android:layout_column="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="resultado"
                android:id="@+id/resultado"
                android:layout_row="2"
                android:layout_column="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/numeroPreguntasCorrectas"
                android:layout_row="3"
                android:layout_column="3" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="111dp"
                android:text="Aqui va la pregunta a mostrar"
                android:id="@+id/textoPregunta"
                android:layout_row="4"
                android:layout_column="3"
                android:singleLine="false"/>
        </GridLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/botonOpcion1"
            android:layout_row="18"
            android:layout_column="5"
            android:background="@mipmap/opciona"
            android:gravity="center_vertical" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/botonOpcion2"
            android:layout_row="19"
            android:layout_column="5"
            android:background="@mipmap/opcionb"
            android:gravity="center_vertical" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/botonOpcion3"
            android:layout_row="20"
            android:layout_column="5"
            android:background="@mipmap/opcionc"
            android:gravity="center_vertical" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/botonOpcion4"
            android:layout_row="21"
            android:layout_column="5"
            android:background="@mipmap/opciond"
            android:gravity="center_vertical" />
    </GridLayout>

</RelativeLayout>
